<div class="container admin-products">
    <div class="conteiner-fluid">
        <div class="row ">
            <p class="col-12 letraMed text-center ">Administrador de productos</p>
            <div class="col-12 d-flex justify-content-end"><%-include('./modal-boton-crear.ejs')%></div>
             
        
        </div>
        <div class="d-none col-12  d-flex align-items-center gris">
            <div class="d-none d-lg-block col-12 ">
            <div class="d-flex justify-content-between">
                <span class="col-2">Imagen</span>   
                <span class="col-2">Nombre</span>
                <span class="col-2">Costo Envio</span>
                <span class="col-2">Precio</span>
                <span class="col-2">Stock</span>
            </div> 
            </div>
        </div>
        <% for(producto of productos) { %>
            <div class=" row text-center mt-3mb-3 d-lg-flex justify-content-between align-items-center border-gris mb-3">
                <img class="img-fluid col-lg-2" src="/img/img-productos/<%=producto.imagen %> ">
                
                <div class="col-2 text-center d-none d-lg-block"><%= producto.nombre %></div>
                <div class="col-2 text-center d-none d-lg-block"><%= producto.envio %></div>
                <div class="col-2 text-center d-none d-lg-block"><%= producto.precio %></div>
                <div class="col-2 text-center d-none d-lg-block"><%= producto.stock %></div>
            
                <div class=" mt-3 d-none d-lg-block ">
                        
         
                    <a class="active pr-3" href="/productos/editar/<%= producto.id %>">
                        <i class="fas fa-edit fa-2x naranja"></i>
                    </a>
                </div>

                 
                
                <div class=" d-lg-none col-12 mt-3">
                    <span class="d-flex justify-content-between"><p>Producto:</p><%= producto.id %> </span> 
                    <span class="d-flex justify-content-between"><p>Envio:</p>Gratis</span>
                    <span class="d-flex justify-content-between"><p>Precio:</p><%= producto.precio %> </span>
                    
                    
                    <div class="d-flex justify-content-around my-2 d-block d-lg-none">
                        <a class="active pr-3" href="/productos/editar/<%= producto.id %>">
                           <i class="fas fa-edit fa-2x naranja"></i>
                        </a>
          
                    
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    